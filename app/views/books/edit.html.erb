<div class="container">
  <div class="row">
    <div class="col-xs-4"></div>
    <div class="col-xs-4">
      <% if @book.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <p>error</p>z
              <% end %>
            </ul>
          </div>
        <% end %>
      <h1>Editing Book</h1>
      <%= form_for(@book) do |f| %>
          <h4>Title</h4><%= f.text_field :title %>
          <h4>Body</h4><%= f.text_area :body %>
            <div class="action row">
            <%= f.submit 'update Book',class: "btn btn-primary col-xs-12" %>
          </div>
      <% end %>
      <%= link_to "edit", book_path %>


      <% if @book.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>



